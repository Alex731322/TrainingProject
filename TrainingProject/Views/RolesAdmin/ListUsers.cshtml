@model IEnumerable<TrainingProject.Models.ApplicationUser>



@{
    ViewBag.Title = "ListUsers";
}

<h2>ListUsers</h2>

<table class="table table-striped">
    <tr>
        <td>Email</td>
        <td><td>
        <td></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>@item.UserName</td>
            
            <td>
                <form action="@Url.Action("ManageUserRoles", "RolesAdmin")" method="post" class="form-inline">
                    <input type="hidden" id="UserName" name="UserName" value="@item.UserName" />
                    <button type="submit" class="btn btn-primary">Manager Roles</button>
                </form>
            </td>  
            
            <td>
                @Html.ActionLink("Reset Password", "ResetPassword", new { Id = item.Id}, new {@class = "btn btn-primary" }  )
            </td>
        
        </tr>
    }
     

</table>